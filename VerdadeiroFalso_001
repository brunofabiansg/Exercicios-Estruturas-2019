#include<stdio.h>

main(){
	int num;
	printf("Informe um numero positivo ou negativo:\n");
	scanf("%d", &num);
	printf("%d\n", num);
	while(num==0){
		printf("VOCE PRECISA SELECIONAR UMA DAS OPCOES\n");
		printf("Informe um numero positivo ou negativo:\n");
		scanf("%d", &num);
		printf("%d\n", num);
	}
	if (num > 0)
		printf("VERDADEIRO\n");
	else if (num<0)
		printf("FALSO");
}
